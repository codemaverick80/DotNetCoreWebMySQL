@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Id</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var i=0;
        }
        @foreach(var item in Model.Genres){
            <tr>               
                <td>@{i+=1;}@i</td>
                <td>@item.Id</td>
                <td>@item.GenreName</td>
                <td>
                    <a href="#" role="button"><i class="fa fa-plus-circle fa-lg"></i></a>
                    &nbsp;&nbsp;
                    <a href="#" role="button"><i class="fa fa-minus-circle fa-lg"></i></a>
                </td>
            </tr>
        }

    </tbody>

</table>
